/* ==========================================================================
   MIXINS
   ========================================================================== */
@import '../lib/nib'

//截断
trucation()
  max-width arguments
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
  display inline-block

//设置高度，且让文字垂直居中
h()
  height arguments
  line-height arguments

// 去除文字上下的空白，使其与文字高度相等
raw-font-size(size)
  font-size size
  line-height size

//方形
square(width, height = width)
  width width
  height height

/**
 * 度量单位
 * @param {string|number} 如果没有单位，默认为px
 */
m(size, bu = base-unit)
  ratio = 10 / 12
  //10px
  tenPx = ratio * size
  if bu is 'rem'
    return unit(tenPx / 10, 'rem')
  if bu is 'px'
    return unit(size, 'px')


//硬件加速
accelerate()
  transform translateZ(0)

//component name
c(name)
  return name
