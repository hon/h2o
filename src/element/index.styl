/* =========================================================================
   Base html element style
   ========================================================================= */

@import "button"
@import "form"
@import "table"

textarea
	vertical-align top

/**
 * Remove list style
 */
ul,
ol
	list-style none

/**
 * margin, padding and box-sizing
 */
ul,
ol,
li,
h1,
h2,
h3,
h4,
h5,
h6,
button,
textarea,
input,
p,
dl,
dt,
dd
	padding 0
	margin 0
	box-sizing border-box

/**
 * Root element
 */
html,
body
  //取消默认点击颜色
	-webkit-tap-highlight-color rgba(0,0,0,0)
	-webkit-font-smoothing antialiased
	font-size base-font-size
